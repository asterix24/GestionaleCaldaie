{% endblock %}

{% block navigation_menu_block_bot %}
<li><a href="/export{{query_path}}">Esporta CSV</a></li>
{% endblock %}

{% block center_block %}

<div class="row-fluid">
    <div class="form-horizontal">
    <form action="{% url home %}" method="GET">
        {{data_form.search_keys}}
        {{data_form.filter_type}}
        {{data_form.ref_month}}
        {{data_form.ref_year}}
